<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/item_route"
    android:layout_margin="@dimen/padding_minor"
    app:cardCornerRadius="@dimen/padding_minor">

    <RelativeLayout
        android:gravity="center|start"
        android:padding="@dimen/padding_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:id="@+id/img_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/lab_route_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_route"
            android:layout_toRightOf="@id/img_route"
            android:padding="@dimen/padding_minor"
            android:fontFamily="@font/poppins_light"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_title_size" />

        <TextView
            android:id="@+id/lab_route_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lab_route_name"
            android:layout_toEndOf="@id/img_route"
            android:layout_toRightOf="@id/img_route"
            android:padding="@dimen/padding_minor"
            android:fontFamily="@font/poppins_light"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_description_size" />

    </RelativeLayout>


</android.support.v7.widget.CardView>